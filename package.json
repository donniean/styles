{
  "name": "@donniean/styles",
  "version": "0.0.0-development",
  "description": "",
  "homepage": "https://github.com/donniean/styles#readme",
  "bugs": {
    "url": "https://github.com/donniean/styles/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donniean/styles.git"
  },
  "license": "MIT",
  "author": "Donnie An",
  "main": "",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx postcss src -d dist --env production --ext min.css",
    "commit": "git-cz",
    "lint:cspell": "cspell --no-must-find-files \"**\"",
    "lint:eslint": "npx eslint \"**/*.js\"",
    "lint:eslint:fix": "npx eslint --fix \"**/*.js\"",
    "lint:stylelint": "npx stylelint \"**/*.{css,scss}\"",
    "lint:stylelint:fix": "npx stylelint --fix \"**/*.{css,scss}\"",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "prettier": "npx prettier --write \"**/*.{js,css,scss,json,md}\"",
    "pub": "npm run release && npm publish --access public",
    "release": "npm run build && standard-version",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "commitizen": "^4.3.0",
    "cspell": "^6.26.3",
    "cssnano": "^5.1.15",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.4",
    "standard-version": "^9.5.0",
    "stylelint": "^15.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-order": "^6.0.2",
    "stylelint-prettier": "^3.0.0",
    "semantic-release": "^21.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1"
  }
}
